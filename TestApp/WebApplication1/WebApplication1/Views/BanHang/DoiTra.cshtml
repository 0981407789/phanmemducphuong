@using(Html.BeginForm()){
<div class="container">
    <div class="row">
        <h3 class="headertext">
            <i class="fa fa-refresh"></i>  Đổi trả
        </h3>
    </div>
    <div class="row" style="background: #dadada; padding: 5px; font-weight: bold;">
        @Html.Action("ChiTetDonHangById", "BanHang", new { id = ViewBag.id })
    </div>

    <div class="row" style="padding: 10px;background: #efefef;">
        <div class="col-lg-3">
            <span>
                Ngày Tháng
            </span>
            <span>
                <input type="text" class="form-control" id="ngaythang" name="ngaythang" />
            </span>
        </div>
        <div class="col-lg-3">
            <span>
                Số lượng:
            </span>
            <span>
                <input type="text" class="form-control" name="soluong">
            </span>
        </div>
        <div class="col-lg-3">
            <span>
                Lý do
            </span>
            <span>
                <input type="text" class="form-control" name="lydo">
            </span>
        </div>
        <div class="col-lg-3">
            <p style=" margin-top: 20px;">
                <span>
                    <input type="submit" value="Thực hiện" class="btn btn-primary" />
                </span>
                <span>
                    <input type="button" value="Hủy" class="btn btn-danger" />
                </span>
            </p>
        </div>
    </div>

</div>
}
<script>
    $("#ngaythang").datepicker(
          $.datepicker.regional["vi"]
      );
</script>