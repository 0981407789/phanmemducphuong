@using (Ajax.BeginForm("FullSearchResult", "KhachHangs", new AjaxOptions()
{
    HttpMethod = "Post",
    UpdateTargetId = "ListCustomer",
    InsertionMode = InsertionMode.Replace
}))
{
    <div class="container">
        <h2>Tìm kiếm khách hàng</h2>
        <div class="row">
            <div class="col-xs-8">
                <input class="form-control" type="text" id="q" name="q" placeholder="Nhập từ khóa" />
            </div>
            <div class="col-xs-4">
                <input type="submit" value="Tìm kiếm" class="form-control btn-primary btn" />
            </div>
        </div>
        <p></p>
        <div class="row" style="margin-top:10px">
            <div class="col-lg-12 table-responsive" id="">
                <table id="ListCustomertb" class="table table-bordered table-condensed table-hover table-striped">
                    <thead>
                        <tr>
                            <th class="hidden">Id</th>
                            <th>Tên</th>
                            <th>Điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Ngày Sinh</th>
                            <th>CMND</th>
                            <th>Xã</th>
                        </tr>
                    </thead>
                    <tbody id="ListCustomer"></tbody>
                </table>
            </div>
        </div>
    </div>
}
