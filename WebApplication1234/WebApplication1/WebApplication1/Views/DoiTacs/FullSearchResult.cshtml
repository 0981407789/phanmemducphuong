@model List<WebApplication1.Models.DoiTac>
@{
    Layout = null;
}
@if (Model != null && Model.Count > 0)
{
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="c_id hidden">@item.Id</td>
                                <td class="c_name">@item.Ten</td>
                                <td class="c_phone"> @item.SoDienThoai</td>
                                <td class="c_diachi"> @item.DiaChi</td>
                            </tr>
                        }
}
else
{
    <div>
        <p>Không có dữ liệu</p>
        <a class="textAddNewCustomer" id="textAddNewCustomer" href="@Url.Action("AddPartnerDialog","DoiTacs")">
            <p style="padding:10px;font-weight:bold">Thêm mới</p>
        </a>
    </div>
}
<script>
    $(document).ready(function () {
        $('.textAddNewCustomer').colorbox({ width: "80%", height: "80%" });
        $('#ListCustomertb tr').click(function (e) {
            var name = $(this).find("td.c_name").text();
            var id = $(this).find("td.c_id").text();

            $('#AutoSearchPartner').val(name);
            $('#iddoitac').val(id);
            $('#cboxClose').click();
            $('#ShowArea').hide();
        });
    });
</script>
<style>
    #ListCustomertb tr {
        cursor: pointer;
    }
</style>