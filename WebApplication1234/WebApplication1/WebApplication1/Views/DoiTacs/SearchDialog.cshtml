@using (Ajax.BeginForm("FullSearchResult", "DoiTacs", new AjaxOptions()
{
    HttpMethod = "Post",
    UpdateTargetId = "ListCustomertb",
    InsertionMode = InsertionMode.Replace
}))
{
    <div class="container">
        <h2>Tìm kiếm đối tác</h2>
        <div class="row">
            <div class="col-xs-8">
                <input class="form-control" type="text" id="q" name="q" placeholder="Nhập từ khóa" />
            </div>
            <div class="col-xs-4">
                <input type="submit" value="Tìm kiếm" class="form-control btn-primary btn" />
            </div>
        </div>
        <p></p>
        <div class="row table-responsive" style="margin-top:10px">
            <div class="col-lg-12" id="ListCustomer">
                <table id="" class="table table-bordered table-condensed table-hover">
                    <thead>
                        <tr>
                            <th class="hidden">Id</th>
                            <th>Tên</th>
                            <th>Điện thoại</th>
                            <th>Địa chỉ</th>
                        </tr>
                    </thead>
                    <tbody id="ListCustomertb">

                    </tbody>
                  
                </table>
            </div>
        </div>
    </div>
}