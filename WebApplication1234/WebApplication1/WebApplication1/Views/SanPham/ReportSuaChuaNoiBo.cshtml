@model List<WebApplication1.Models.SuaChuaNoiBo>

@using (Html.BeginForm("ReportSuaChuaNoiBo", "SanPham", FormMethod.Get))
{
    <div class="container topinputarea">
        <div class="row">
            <h4 class="headertext">
                <i class="fa fa-bar-chart"></i>  Báo cáo <i class="fa fa-chevron-right"></i> Sửa chữa nộ bộ
            </h4>
        </div>
        <div class="row baocaotop">
            <div class="col-lg-5">
                <p class="row">
                    <span class="col-lg-3 col-xs-3">
                        <i class="fa fa-calendar"></i>  Từ ngày
                    </span>
                    <span class="col-lg-9 col-xs-9">
                        <input type="text" class="form-control" id="fromdate" name="f" value="@ViewBag.f" />
                    </span>

                </p>
            </div>
            <div class="col-lg-5">
                <p class="row">
                    <span class="col-lg-3 col-xs-3">
                        <i class="fa fa-calendar"></i>  Đến ngày
                    </span>
                    <span class="col-lg-9 col-xs-9">
                        <input type="text" class="form-control" id="todate" name="t" value="@ViewBag.t" />
                    </span>

                </p>
            </div>
            <div class="col-lg-2">
                <button type="submit" class="form-control btn btn-primary" style="font-weight:bold">
                    <i class="fa fa-file-o"></i>
                    Báo cáo
                </button>

            </div>
        </div>
    </div>


}
<div class="container" id="DanhSachSanPham">
    <p style="background: #d6d6d6; color: #ff0000; padding: 10px; margin-bottom: 0px; font-weight: bold; font-size: 20px;" class="row">
        Tổng: <span class="money" id="tongtien"></span>
    </p>
    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>
                        Ngày tháng
                    </td>
                    <td>
                        Sản phẩm
                    </td>
                    <td>
                        Số tiền
                    </td>
                    <td>
                        Thực hiện
                    </td>
                    <td>
                        Chi tiết
                    </td>
                    <td>
                        Ghi chú
                    </td>
                </tr>
            </thead>
            <tbody id="myTable">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="date">
                                    @item.NgayThang
                                </span>
                            </td>
                            <td>
                                @Html.Action("SanPhamById", "SanPham", new { id = item.SanPham })
                            </td>
                            <td>
                                <span class="money sotien">
                                    @item.TongTien
                                </span>

                            </td>
                            <td>
                                @item.NguoiThucHien
                            </td>
                            <td style="margin: 0px;padding: 5px 0px;">
                                <div class="container">
                                    @Html.Action("ReportSuaChuNoiBoChiTiet", "SanPham", new { id = item.Id })
                                </div>

                            </td>
                            <td>
                                @item.GhiChu
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>
<script>
    $("#fromdate").datepicker(
        $.datepicker.regional["vi"]
    );
    $("#todate").datepicker(
        $.datepicker.regional["vi"]
    );
