    $(document).ready(function () {
        //CountTotalMoney();
        var tongtien = 0;
        $('.sotien').each(function () {
            var sotien = $(this).text().replace(/,/g, '');
            tongtien += parseFloat(sotien);
            $('#tongtien').text(tongtien);
            $('#tongtien').number(true, 0);
        });
    });
</script>
